{
  "name": "react-pebble",
  "author": "MakeAwesomeHappen",
  "version": "1.0.0",
  "keywords": [
    "pebble-app"
  ],
  "private": true,
  "babel": {
    "plugins": [
      "transform-decorators-legacy"
    ],
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "react": "^16.3.2",
    "react-reconciler": "^0.11.0"
  },
  "scripts": {
    "build": "webpack --config webpack.react.config.js && pebble build",
    "emulator": "npm run build && pebble install --emulator basalt --logs"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^6.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^1.0.1",
    "eslint": "^4.10.0",
    "eslint-plugin-react": "^7.4.0",
    "webpack": "^1.8.7"
  },
  "pebble": {
    "displayName": "react",
    "uuid": "aad6f4cd-02a3-40ea-a180-5ec43b037eb2",
    "sdkVersion": "3",
    "enableMultiJS": true,
    "targetPlatforms": [
      "aplite",
      "basalt",
      "chalk",
      "diorite"
    ],
    "watchapp": {
      "watchface": false
    },
    "messageKeys": [
      "operation",
      "nodeType",
      "nodeId",
      "props"
    ],
    "resources": {
      "media": [
        {
          "file": "images/ajax-loader.png",
          "name": "SPINNER",
          "type": "raw"
        },
        {
          "file": "images/static.png",
          "name": "STATIC",
          "type": "bitmap"
        }
      ]
    }
  }
}
